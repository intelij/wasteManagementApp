<Alloy>
	<Window class="container" navBarHidden="true">
		<Require id="topbar" src="common/topbar"></Require>
		<Require id="navbar" src="common/navbar"></Require>
		<ScrollView  id="scrollview">
			<View id="categoryView">
				<Label id="categoryLabel"></Label>
			</View>
			<View id="scheduleView" class="infoView">
				<View id="scheduleImageView" class="infoChaildView">
					<ImageView class="icon" id="scheduleImage"></ImageView>
					<Label class="heading" id="scheduleLabel">Schedule</Label>
				</View>
				<Label id="pickup" class="date" ></Label>
			</View>
			<View id="destinationView" class="infoView">
				<View id="destinationImageView" class="infoChaildView">
					<ImageView class="icon" id="destinationImage"></ImageView>
					<Label class="heading" id="destinationLabel">Destination</Label>
				</View>
				<Label id="destinationValue" class="date"></Label>
			</View>
			<View id="methodView" class="infoView">
				<View id="methodImageView" class="infoChaildView">
					<ImageView class="icon" id="methodImage"></ImageView>
					<Label class="heading" id="methodLabel">Method</Label>
				</View>
				<Label id="methodValue" class="date"></Label>
			</View>
			<View id="inclusionsView" class="infoView">
				<View id="inclusionsImageView" class="infoChaildView">
					<ImageView class="icon" id="inclusionsImage"></ImageView>
					<Label class="heading" id="inclusionsLabel">Inclusions</Label>
				</View>
			</View>
			<View id="exclusionsView" class="infoView">
				<View id="exclusionsImageView" class="infoChaildView">
					<ImageView class="icon" id="exclusionsImage"></ImageView>
					<Label class="heading" id="exclusionsLabel">Exclusions</Label>
				</View>
			</View>

		</ScrollView>
	</Window>
</Alloy>
