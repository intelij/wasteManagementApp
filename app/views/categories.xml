<Alloy>
	<Window class="container" navBarHidden="true">
		<Require id="topbar" src="common/topbar"></Require>
		<Require id="navbar" src="common/navbar"></Require>
		<ScrollView  id="scrollview">
			<View id="categoryView">
				<Label id="categoryLabel"></Label>
			</View>
			<Label id="popupLabel"></Label>
			<View id="scheduleview">
				<View id="scheduleimageView">
					<ImageView class="icon" id="clockimage"></ImageView>
					<Label class="heading" id="clockLabel">Schedule</Label>
				</View>
				<Label id="pickup"></Label>
			</View>
			<View id="destinationView">
				<View id="destinationimageView">
					<ImageView class="icon" id="destinationimage"></ImageView>
					<Label class="heading" id="destinationLabel">Destination</Label>
				</View>
				<Label id="destinationvalue"></Label>
			</View>
			<View id="methodView">
				<View id="methodimageView">
					<ImageView class="icon" id="methodimage"></ImageView>
					<Label class="heading" id="methodLabel">Method</Label>
				</View>
				<Label id="methodvalue"></Label>
			</View>
			<View id="inclusionsView">
				<View id="inclusionsImageView">
					<ImageView class="icon" id="inclusionsImage"></ImageView>
					<Label class="heading" id="inclusionsLabel"> Inclusions </Label>
				</View>
			</View>
			<View id="exclusionsView">
				<View id="exclusionsImageView">
					<ImageView class="icon" id="exclusionsImage"></ImageView>
					<Label class="heading" id="exclusionsLabel">Exclusions</Label>
				</View>
			</View>

		</ScrollView>
	</Window>
</Alloy>
